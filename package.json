{
    "name": "wordpress-modern-settings-api-example-plugin",
    "version": "0.3.0",
    "description": "An example plugin that demonstrates the usage of react components on the WordPress admin side using the WordPress Modern Settings API feature plugin.",
    "author": "Marcel Schmitz",
    "license": "GPL-3.0+",
    "scripts": {
        "build": "wp-scripts build && cp -f ./src/settings.json ./build",
        "format": "wp-scripts format",
        "lint:css": "wp-scripts lint-style",
        "lint:js": "wp-scripts lint-js",
        "packages-update": "wp-scripts packages-update",
        "plugin-zip": "wp-scripts plugin-zip",
        "start": "cp -f ./src/settings.json ./build && wp-scripts start"
    },
    "devDependencies": {
        "@wordpress/scripts": "^25.2.0"
    },
    "dependencies": {
        "bootstrap": "^5.2.3",
        "classnames": "^2.3.2"
    }
}
